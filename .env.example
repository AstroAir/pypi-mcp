# PyPI MCP Server Configuration
# Copy this file to .env and modify as needed

# PyPI API Settings
PYPI_MCP_PYPI_BASE_URL=https://pypi.org
PYPI_MCP_PYPI_SIMPLE_URL=https://pypi.org/simple
PYPI_MCP_USER_AGENT=pypi-mcp/0.1.0 (https://github.com/AstroAir/pypi-mcp)

# HTTP Client Settings
PYPI_MCP_TIMEOUT=30.0
PYPI_MCP_MAX_RETRIES=3

# Rate Limiting
PYPI_MCP_RATE_LIMIT=10.0

# Caching Settings
PYPI_MCP_CACHE_TTL=300
PYPI_MCP_CACHE_MAX_SIZE=1000

# Logging Settings
PYPI_MCP_LOG_LEVEL=INFO
PYPI_MCP_LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Server Settings
PYPI_MCP_SERVER_NAME=PyPI MCP Server
PYPI_MCP_SERVER_VERSION=0.1.0

# Feature Flags
PYPI_MCP_ENABLE_VULNERABILITY_CHECK=true
PYPI_MCP_ENABLE_STATS=true
PYPI_MCP_ENABLE_SEARCH=true
