{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: PyPI MCP Server (STDIO)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/pypi_mcp/server.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Python: PyPI MCP Server (HTTP)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/pypi_mcp/server.py",
            "args": [
                "--transport",
                "http",
                "--host",
                "localhost",
                "--port",
                "8000"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Python: Pytest",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": [
                "${workspaceFolder}/tests",
                "-v"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        }
    ]
}
